@model Modelo.Cadastros.Fabricante

<div class="form-group">
    @Html.LabelFor(model => model.Nome)
    <br />
    <div class="input-group">
        <div class="input-group mb-3">
            <input type="text" class="form-control" value="@Html.ValueFor(model => model.Nome)" disabled>
            <div class="input-group-append">
                <a href="@Url.Action("Edit", new { id = Model.FabricanteID})" class="btn btn-outline-primary">Editar</a>
            </div>
        </div>
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(model => model.Estado, new { @class = "col-form-label col-md-2" })
    <div class="input-group">
        @Html.EditorFor(model => model.Estado.Nome, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(model => model.Cidade, new { @class = "col-form-label col-md-2" })
    <div class="input-group">
        @Html.EditorFor(model => model.Cidade.Nome, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
    </div>
</div>