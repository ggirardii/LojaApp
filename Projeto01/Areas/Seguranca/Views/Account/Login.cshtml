@model Projeto01.Areas.Seguranca.Models.LoginViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Login de Acesso";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="card">
        <div class="card-header">
            Acessando o Sistema
        </div>
        <div class="card-body">
            @if (ViewData.ModelState.Keys.Any(k => ViewData.ModelState[k].Errors.Count > 0))
            {
                <div class="alert alert-danger alert-dismissible">
                    @Html.ValidationSummary(false,null, new {@style = "margin-bottom:-10px"})
                </div>
            }
            <div class="form-group">
                @Html.LabelFor(model => model. Nome, new { @class = "col-form-label col-md-2"})
                <div class="col-md-4">
                    @Html.EditorFor(model => model.Nome, new { htmlAttributes = new {@class = "form-control"}})
                    @Html.ValidationMessageFor(model => model.Nome, "", new { @class="text-danger"})
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Senha, new { @class = "col-form-label col-md-2"})
                <div class="col-md-4">
                    @Html.PasswordFor(model => model.Senha, new { @class = "form-control"})
                    @Html.ValidationMessageFor(model => model.Senha,"", new { @class = "text-danger"})
                </div>
            </div>
        </div>
        <div class="panel-footer">
            <input type="submit" value="Login" class="btn btn-primary" />
            @Html.ActionLink("Cancelar", "Index", new { controller = "Produtos"}, new { @class = "btn btn-secondary"})
        </div>
    </div>
}
@section ScriptPage{
    <script type="text/javascript">
        $(document).ready(function () {
            
            if (window.location.href.indexOf("Admin") > -1) {
                if (window.location.href.indexOf("PapelAdmin") > -1) {
                    $('li').removeClass("active");
                    $('#liPapeis').addClass("active");
                }
                else {
                    $('li').removeClass("active");
                    $('#liUsuarios').addClass("active");
                }
            }
        });
    </script>
    }
