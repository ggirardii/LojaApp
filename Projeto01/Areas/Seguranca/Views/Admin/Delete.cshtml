@model Modelo.Autenticacao.Usuario
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Deletar um usuário";
}
<div class="card">
    <div class="card-header">
        Detalhes do usuário a ser excluido
    </div>
    <div class="card-body">
        <div class="form-group">
            @Html.LabelFor(model => model.Id, new { @class="col-form-label col-md-2"})
            <div class="col-md-12">
                @Html.EditorFor(model => model.Id, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.UserName, new { @class = "col-form-label col-md-2"})
            <div class="col-md-12">
                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new {@class = "form-control", disabled = "disabled"}})
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Email, new { @class = "col-form-label col-md-2"})
            <div class="col-md-12">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new {@class = "form-control", disabled = "disabled"}})
            </div>
        </div>
    </div>
    <div class="panel-footer">
        <a href="#" id="btnDelete" class="btn btn-danger" data-toggle="modal" data-target="#deleteConfirmationModal">Deletar</a>
        @Html.ActionLink("Retornar","Index",null, new { @class = "btn btn-secondary"})
    </div>
</div>

<div class="modal fade" id="deleteConfirmationModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Confirmação de exclusão de usuário</h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            </div>
            <div class="modal-body">
                <p>Você está prestes a remover o usuario @Model.UserName.ToUpper() do Cadastro</p>
                <p><strong>Você tem certeza que deseja prosseguir?</strong></p>
                @using (Html.BeginForm("Delete","Admin", FormMethod.Post, new { @id = "delete-form", role = "form"}))
                {
                    @Html.HiddenFor(m => m.Id)
                    @Html.AntiForgeryToken()
                }
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-danger" onclick="$('#delete-form').submit();">Deletar</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
            </div>
        </div>
    </div>
</div>
@section ScriptPage{
    <script type="text/javascript">
        $(document).ready(function () {
            $('li').removeClass("active");
            $('#liUsuarios').addClass("active");
        });
</script>
    }