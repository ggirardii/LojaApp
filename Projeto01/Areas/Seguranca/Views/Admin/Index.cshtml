@model IEnumerable<Modelo.Autenticacao.Usuario>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Listagem de Ususarios";
}
@if (@TempData ["message"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["message"]
    </div>
}

<div class="card">
    <div class="card-header">
        Relação de Usuários Registrados
    </div>
    <div class="card-body">
        <table class="table table-bordered table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UserName)
                    </th>
                    <th align="center">
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        <p style="text-align:center; margin:0px">Ações</p>
                    </th>
                </tr>
            </thead>
            <tbody>
                @if(Model.Count() == 0)
                {
                    <tr>
                        <td colspan="4" class="text-center">
                            Sem Usuários Registrados
                        </td>
                    </tr>
                }
                else
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UserName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td align="center">
                                <a class="remove-underline" href="@Url.Action("Edit", new { id = item.Id})"><i class="ti-pencil text-dark btn-icon"></i></a>|
                                <a class="remove-underline" href="@Url.Action("Details", new { id = item.Id})"><i class="ti-eye text-dark btn-icon"></i></a>|
                                <a class="remove-underline" href="@Url.Action("Delete", new { id = item.Id})"><i class="ti-trash text-dark btn-icon"></i></a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
    <div class="panel-footer">
        @Html.ActionLink("Cadastrar", "Create", null ,new { @class = "btn btn-primary"})
    </div>
</div>

@section ScriptPage{
    <script type="text/javascript">
        $(document).ready(function () {
            $('li').removeClass("active");
            $('#liUsuarios').addClass("active");
        });
    </script>
    }
