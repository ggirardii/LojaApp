@using Projeto01.Areas.Seguranca.Models
@using Modelo.Autenticacao
@model SegurancaModelViews.PapelEditModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{

    <div class="card">
        <div class="card-header">
            Remover Papel
        </div>
        <div class="card-body">
            <div class="form-group">
                @Html.LabelFor(x => x.Papel.Name, "Papel", new { @class = "col-form-label col-md-2" })
                <div class="col-md-12">
                    @Html.EditorFor(x => x.Papel.Name, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                </div>
            </div>
            <div class="card">
                <div class="card-header">
                    Relação de Usuários nesse Papel
                </div>
                <div class="card-body">
                    <table class="table table-striped table-bordered table-hover">
                        @if (Model.NaoMembros.Count() == 0 && Model.Membros.Count() == 0)
                {
                            <tr>
                                <td colspan="2">
                                    Não existe usuários cadastrados neste Papel
                                </td>
                            </tr>
                        }
                        else
                        {
                            if (Model.NaoMembros.Count() == 0)
                            {
                                <tr>
                                    <td colspan="2">
                                        Todos os usuários estão cadastrados neste Papel
                                    </td>
                                </tr>
                            }
                            else
                            {
                                <tr>
                                    <td>
                                        Usuários
                                    </td>
                                    <td>
                                        Adicionar ao Papel
                                    </td>
                                </tr>
                                foreach (Usuario usuario in Model.Membros)
                                {
                                    <tr>
                                        <td>
                                            @usuario.UserName
                                        </td>
                                        @*<td>
                                                <input type="checkbox" name="IdsParaAdicionar" value="@usuario.Id" />
                                            </td>*@
                                    </tr>
                                }
                            }
                        }
                    </table>
                </div>
            </div>
        </div>
        <div class="panel-footer">
        </div>
    </div>

}