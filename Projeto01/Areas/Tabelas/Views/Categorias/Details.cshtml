    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Visualizar detalhes";
}

<div class="card">
    <div class="card-header">
       Visualizando detalhes da Categoria
    </div>
    <div class="card-body">
        @Html.Partial("~/Areas/Tabelas/Views/Categorias/_PartialDetailsContentPanel.cshtml", Model)
    </div>
    <div class="panel-footer">
       @Html.ActionLink("Voltar","Index",null,new { @class = "btn btn-secondary"})
